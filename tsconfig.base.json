{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@sample/shared/assets": ["libs/shared/assets/src/index.ts"],
      "@sample/shared/data-access": ["libs/shared/data-access/src/index.ts"],
      "@sample/shared/ui": ["libs/shared/ui/src/index.ts"],
      "@sample/shared/ui-extentions": [
        "libs/shared/ui-extentions/src/index.ts"
      ],
      "@sample/shared/ui-form-validation": [
        "libs/shared/ui-form-validation/src/index.ts"
      ],
      "@sample/shared/ui-header": ["libs/shared/ui-header/src/index.ts"],
      "@sample/shared/ui-input": ["libs/shared/ui-input/src/index.ts"],
      "@sample/shared/ui-sidebar": ["libs/shared/ui-sidebar/src/index.ts"],
      "@sample/shared/utils": ["libs/shared/utils/src/index.ts"],
      "@sample/user-management/auth/feature-auth": [
        "libs/user-management/auth/feature-auth/src/index.ts"
      ],
      "@sample/user-management/login/data-access": [
        "libs/user-management/login/data-access/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
